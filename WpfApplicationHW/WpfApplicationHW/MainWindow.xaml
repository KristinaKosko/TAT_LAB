<Window x:Class="WpfApplicationHW.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApplicationHW"
        mc:Ignorable="d"
        Title="Explore Dlls" Height="500.792" Width="700.176" ResizeMode="NoResize">
    <Grid RenderTransformOrigin="0.5,0.5">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="0*"/>
        </Grid.ColumnDefinitions>
        <Grid.LayoutTransform>
            <MatrixTransform Matrix="Identity"/>
        </Grid.LayoutTransform>
        <Grid.RenderTransform>
            <TransformGroup>
                <ScaleTransform/>
                <SkewTransform/>
                <RotateTransform/>
                <TranslateTransform/>
            </TransformGroup>
        </Grid.RenderTransform>
        <Button x:Name="button" Content="Browse" HorizontalAlignment="Left" Margin="559,10,0,0" VerticalAlignment="Top" Width="96" Height="26" Click="button_Click"/>
        <TextBox x:Name="selectFolder" HorizontalAlignment="Left" Height="26" Margin="24,10,0,0" TextWrapping="Wrap" Text="Select folder..." VerticalAlignment="Top" Width="493" Background="White" FontSize="14" FontStyle="Italic" TextDecorations="{x:Null}" Foreground="#FFB0B0B0"/>
        <TextBox x:Name="dllExplorer" HorizontalAlignment="Left" Height="21" Margin="24,426,0,0" TextWrapping="Wrap" Text="DLL Explorer" VerticalAlignment="Top" Width="180" IsEnabled="False" FontWeight="Bold" FontSize="13" TextAlignment="Center"/>
        <TextBox x:Name="classesOfDll" HorizontalAlignment="Left" Height="21" Margin="248,426,0,0" TextWrapping="Wrap" Text="Classes of Dll" VerticalAlignment="Top" Width="193" IsEnabled="False" FontSize="13" FontWeight="Bold" TextAlignment="Center"/>
        <TextBox x:Name="Methods" HorizontalAlignment="Left" Height="21" Margin="483,426,0,0" TextWrapping="Wrap" Text="Methods" VerticalAlignment="Top" Width="183" IsEnabled="False" FontSize="13" FontWeight="Bold" TextAlignment="Center"/>
        <ListBox x:Name="dlls" HorizontalAlignment="Left" Height="306" Margin="24,89,0,0" VerticalAlignment="Top" Width="180" SelectionChanged="dlls_SelectionChanged"/>
        <ListBox x:Name="classes" HorizontalAlignment="Left" Height="306" Margin="248,89,0,0" VerticalAlignment="Top" Width="193" SelectionChanged="classes_SelectionChanged"/>
        <ListBox x:Name="methods" HorizontalAlignment="Left" Height="306" Margin="483,89,0,0" VerticalAlignment="Top" Width="183"/>
        <ComboBox x:Name="chooseProperties" HorizontalAlignment="Left" Margin="559,51,0,0" VerticalAlignment="Top" Width="96" Height="22" SelectionChanged="chooseProperties_SelectionChanged">
            <ComboBoxItem Content="All" IsSelected="True"/>
            <ComboBoxItem Content="Fields"/>
            <ComboBoxItem Content="Properties"/>
            <ComboBoxItem Content="Methods"/>
        </ComboBox>

    </Grid>
</Window>
